@model List<UserRolesViewModel>

@{ 
    var userId = ViewBag.userId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add or Remove roles for this user</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" class="form-check-input" />
                    <input type="hidden" asp-for="@Model[i].RoleName" class="form-check-input" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="card-footer">
            <input type="submit" style="width:auto" value="Update" class="btn btn-primary" />
            <a asp-action="EditUser" asp-route-id="@userId" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>