@model UserClaimsViewModel


<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add or Remove claims for this user</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimType" class="form-check-input" />
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                        @Model.Claims[i].ClaimType
                    </label>
                </div>
            }
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="card-footer">
            <input type="submit" style="width:auto" value="Update" class="btn btn-primary" />
            <a asp-action="EditUser" asp-route-Id="@Model.UserId" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>